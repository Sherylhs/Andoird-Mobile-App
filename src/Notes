            StringBuilder bb = new StringBuilder();
            try {
                JSONObject jsonObject = new JSONObject(r.getValue());
                JSONArray articles = jsonObject.getJSONArray("articles");
                for (int i = 0; i < articles.length(); i++) {
                    if (articles.getJSONObject(i) != null) {
                        String title = articles.getJSONObject(i).getString("title");
                        String description = articles.getJSONObject(i).getString("description");
                        bb.append(title).append("+\n").append(description).append("@\n");
                    }
                }

                String[] results = sb.toString().split("@");//amount
                for (int i = 0; i < amount; i++) {
                    sb = sb.append(i + 1).append(". ").append(results[i]).append("\n");
                }